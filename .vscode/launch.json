    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "All Items",
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "--bin=ffxiv-crafting",
                    "--package=ffxiv-crafting"
                ],
                "filter": {
                    "name": "ffxiv-crafting",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
