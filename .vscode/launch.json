    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run Server",
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "ffxiv_server",
                    "--profile=release-debug"
                ]
            },
            "args": [],
            "env": {
                "FFXIV_DATA_CENTERS": "Dynamis"
            },
            "cwd": "${workspaceFolder}/crates"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Server",
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "ffxiv_server"
                ],
            },
            "args": [],
            "env": {
                "FFXIV_DATA_CENTERS": "Dynamis"
            },
            "cwd": "${workspaceFolder}/crates"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Items",
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "ffxiv_items"
                ],
            },
            "args": [],
            "env": {
                "FFXIV_DATA_CENTERS": "Dynamis",
                "RUST_BACKTRACE": "1",
            },
            "cwd": "${workspaceFolder}/crates"
        }
    ]
}